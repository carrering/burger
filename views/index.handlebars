<h1>Burger Bar</h1>

<img src="/assets/images/burger1.png">


<table>
  <tr>
    <td id="burger_order_col">
<h2>Burger Order</h2>


<ul>
 {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

    </td>
    <td id="burger_devoured_col">
<h2>Devoured</h2>


<ul>
 {{#each burgers}}
    {{#if devoured}}
     <li>{{burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>
    </td>
  </tr>
  <tr>
    <td>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>
    </td>
  </tr>
</table>






